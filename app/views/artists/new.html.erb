<style>
    h1, p, a, label, input {
        font-family: Arial, Helvetica, sans-serif;
    }

    p {
        font-size: 18px;
    }
</style>

<h1>Artist Form</h1>

<%= form_for(@artist) do |f| %>
    <%= f.label :name, 'Artist name:'%> 
    <%= f.text_field :name %>
    <br>
    <br>

    <%= f.label :bio, 'Artist bio:'%> 
    <%= f.text_field :bio %>
    <br>
    <br>

    <%= f.submit %>
<% end %>