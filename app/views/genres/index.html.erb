<style>
    h1, p, a {
        font-family: Arial, Helvetica, sans-serif;
    }

    p {
        font-size: 18px;
    }
</style>

<h1>All Genres:</h1>

<strong>
    <p style="font-size: 22px;"><%= link_to 'Create a new genre', new_genre_path %></p>
</strong>

<% @genres.each do |genre| %>
    <p>
        <%= link_to("#{genre.name}", genre_path(genre)) %>
    </p>
<% end %>